{% extends 'base.html.twig' %}

{% block title %}Gestion des comptes Administrateurs{% endblock %}

{% block body %}

<div class="container px-4 py-6">

    <h1 class="title">Gestion des comptes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Gestion</th>
            </tr>
        </thead>
        <tbody>
        {% for admin in admins %}
            <tr>
                <td>{{ admin.id }}</td>
                <td>{{ admin.email }}</td>
                <td>
                    {% if 'ROLE_SUPER_ADMIN' in admin.roles %}
                        Super Admin
                    {% else %}
                        Admin
                    {% endif %}
                </td>

                <td>
                    <a href="{{ path('admin_edit', {'id': admin.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_new') }}">Cr√©er un nouveau</a>

</div>
{% endblock %}
