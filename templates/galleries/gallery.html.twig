{% extends 'base.html.twig' %}

{% block title %}Gallerie - {{ galerie.year }}{% endblock %}

{% block body %}

    <div class="is-relative">
        <div class="buttons is-absolute is-left-0" style="top: -25px;">
            <a class="button is-small is-dark" href="{{ path('home') }}">Retour aux galeries</a>
            {% if is_granted('ROLE_ADMIN') %}
                <a class="button is-small is-dark" href="{{ path('year_directory_edit', {'id': galerie.id}) }}" title="Modifier cette galerie">Modifier la galerie</a>
            {% endif %}
        </div>
    </div>

        <div class="container is-flex-desktop is-justify-content-center pt-6">

            <div class="column is-two-thirds-desktop">

                {% set j = 0 %}
                {% for oeuvre in oeuvres %}
                    {% if j == 0 %}
                        <figure class="figure is-relative has-text-centered is-height-80vh is-flex-touch is-align-items-center is-justify-content-center is-flex-direction-column">
                            <div class="is-absolute-desktop is-top-0 is-right-0 transform-year-desktop">
                                <h1 class="title has-text-info is-size-2-desktop has-text-weight-bold has-text-right title-galerie">
                                    {{ oeuvre.year }}
                                </h1>
                                <h2 class="subtitle is-5 has-text-info has-text-weight-bold has-font-playfair has-text-right">{{ oeuvre }}</h2>
                            </div>
                            {% if oeuvre.fileName %}
                                <img class="has-max-height-70vh border-60px-desktop is-width-100" src="{{ asset('/images/oeuvres/') }}{{ oeuvre.fileName }}" alt="{{ oeuvre.fileName }}" title="{{ oeuvre.title }}">
                            {% else %}
                                <img class="has-max-height-70vh border-60px-desktop is-width-100" src="{{ asset('/build/images/480x320.86ac0bc4.png') }}" alt="Fichier image manquant" title="Fichier image manquant">
                            {% endif %}
                        </figure>
                    {% endif %}
                    {% set j = j+1 %}
                {% endfor %}

                <div class="is-flex-desktop is-justify-content-space-between">

                        <div class="column is-two-fifths-desktop py-0 px-0 is-flex-direction-column is-flex-desktop">
                            {% set i = 0 %}
                            {% for oeuvre in oeuvres %}
                                {% if i is odd and i != 0 %}
                                        {{ include('includes/oeuvre_block.html.twig') }}
                                {% endif %}
                                {% set i = i+1 %}
                            {% endfor %}
                        </div>

                        <div class="column is-two-fifths-desktop py-0 px-0 margin-10rem-desktop">
                            {% set i = 0 %}
                            {% for oeuvre in oeuvres %}
                                {% if i is even and i != 0 %}
                                        {{ include('includes/oeuvre_block.html.twig') }}
                                {% endif %}
                                {% set i = i+1 %}
                            {% endfor %}
                        </div>
                </div>
        </div>

        </div>
{% endblock %}
