{% extends 'base.html.twig' %}

{% block title %}Gallerie - {{ galerie.year }}{% endblock %}

{% block body %}

    <div class="is-relative">
        <div class="buttons is-absolute is-left-0" style="top: -25px;">
            <a class="button is-small is-dark" href="{{ path('home') }}">Retour aux galeries</a>
            {% if is_granted('ROLE_ADMIN') %}
                <a class="button is-small is-dark" href="{{ path('year_directory_edit', {'id': galerie.id}) }}" title="Modifier cette galerie">Modifier la galerie</a>
            {% endif %}
        </div>
    </div>

        <div class="container is-flex-desktop is-justify-content-center">

            <div class="column is-two-thirds-desktop">

{#            <div class="column is-full is-flex is-justify-content-center is-align-items-center is-relative py-6 px-0 is-height-90vh">#}
                <figure class="figure is-relative">
                    <div class="is-absolute is-top-0 is-right-0 transform-year-desktop">
                        <h1 class="title has-text-info is-size-2-desktop has-text-weight-bold has-text-right title-galerie">
                            {{ galerie.year }}
                        </h1>
                        <h2 class="subtitle is-5 has-text-info has-text-weight-bold has-font-playfair has-text-right">{{ galerie.title }}</h2>
                    </div>
                    {% if galerie.fileName %}
                        <img class="has-max-height-70vh border-75px-desktop" src="{{ asset('/images/years_directory_img/') }}{{ galerie.fileName }}" alt="{{ galerie.fileName }}" title="{{ galerie.title }}">
                    {% elseif galerie.oeuvres[0].fileName %}
                        <img class="has-max-height-70vh border-75px-desktop" src="{{ asset('/images/oeuvres/') }}{{ galerie.oeuvres[0].fileName }}" alt="{{ galerie.oeuvres[0].fileName }}" title="{{ galerie.title }}">
                    {% else %}
                        <img class="has-max-height-70vh border-75px-desktop" src="{{ asset('/build/images/480x320.86ac0bc4.png') }}" alt="Fichier image manquant" title="Fichier image manquant">
                    {% endif %}
                </figure>
{#            </div>#}

            <div class="is-flex-desktop is-justify-content-space-between">

                    <div class="column is-two-fifths-desktop py-0 px-0 is-flex-direction-column is-flex-desktop">
                        {% set i = 0 %}
                        {% for oeuvre in oeuvres %}
                            {% if i is even %}
{#                                <div class="pr-5">#}
                                    {{ include('includes/oeuvre_block.html.twig') }}
{#                                </div>#}
                            {% endif %}
                            {% set i = i+1 %}
                        {% endfor %}
                    </div>

                    <div class="column is-two-fifths-desktop py-0 px-0 margin-10rem-desktop">
                        {% set i = 0 %}
                        {% for oeuvre in oeuvres %}
                            {% if i is odd %}
{#                                <div class="pl-5">#}
                                    {{ include('includes/oeuvre_block.html.twig') }}
{#                                </div>#}
                            {% endif %}
                            {% set i = i+1 %}
                        {% endfor %}
                    </div>
            </div>
        </div>

        </div>
{% endblock %}
