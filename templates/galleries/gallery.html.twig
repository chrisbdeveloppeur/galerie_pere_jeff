{% extends 'base.html.twig' %}

{% block title %}Gallerie - {{ year }}{% endblock %}

{% block body %}
    <section class="section">
        <div class="container">
            <h1 class="title has-text-info is-size-1 has-text-weight-bold">
                {{ year }}
            </h1>

            <div class="is-flex-desktop columns is-multiline is-justify-content-center">
                {% set i = 0 %}
                {% for oeuvre in oeuvres %}
                    <div class="column has-text-centered is-flex is-flex-direction-column is-justify-content-center is-align-items-center has-border-thin has-border-radius-3px is-relative is-full-touch mb-5 mx-3 has-background-white-bis {% if i is divisible by(4) %} is-full-desktop {% else %} is-one-quarter-desktop{% endif %}">

                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('oeuvre_edit', {'id': oeuvre.id }) }}" class="button is-info is-small is-absolute is-top-0 is-left-0">
                                Editer cette oeuvre
                            </a>
                        {% endif %}

{#                        <div class="z-index-less-1 is-absolute is-top-0 is-left-0 is-width-100 is-height-100 is-flex is-justify-content-center is-align-items-center">#}
{#                            <div style="filter: blur(15px);background:center / cover no-repeat url({{ asset('build/images/') }}{{ oeuvre.filename }}); width: 100%;height: 100%">#}

{#                            </div>#}
{#                            <div class="has-background-light-transparent-50 is-absolute is-top-0 is-left-0 is-width-100 is-height-100">#}

{#                            </div>#}
{#                        </div>#}

                        <div class="column is-flex is-justify-content-center">
                            <img class="has-max-height-50vh" src="{{ asset('/images/oeuvres/') }}{{ oeuvre.fileName }}" alt="{{ oeuvre.fileName }}" title="{{ oeuvre.titre }}">
                        </div>

                        <h2 class="subtitle has-text-centered has-text-weight-bold">
                            {{ oeuvre.titre }}
                        </h2>

                        <p class="has-font-playfair has-max-width-500px">
                            {{ oeuvre.description }}
                        </p>
                    </div>
                    {% set i = i+1 %}
                {% endfor %}
            </div>


        </div>
    </section>
{% endblock %}
