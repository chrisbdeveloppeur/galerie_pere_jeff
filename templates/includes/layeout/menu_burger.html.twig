
<div id="menu-slide" class="is-absolute-fullscreen has-max-height-100vh has-transition-7-ms is-left-100 is-top-0 opacity-0 has-background-white-ter is-bold">

    {% if is_granted('ROLE_ADMIN') %}
        <div class="is-absolute is-flex is-flex-direction-column is-width-100 is-hidden-desktop">
            <div class="column">
                <a class="button is-small is-danger" href="{{ path('app_logout') }}">
                    Deconnexion
                </a>
            </div>
        </div>

        <div class="column is-absolute is-bottom-0 is-flex is-justify-content-space-evenly has-text-weight-bold is-hidden-desktop is-width-100">
            <a href="{{ path('year_directory_index') }}" class="">
                Galeries
            </a>
            <a href="{{ path('oeuvre_index') }}" class="">
                Oeuvres
            </a>
        </div>
    {% endif %}

    <div class="is-flex is-justify-content-center is-align-items-center" style="height: 100%;width: 100%">
        <div class="column is-flex-desktop has-max-height-80vh" style="overflow: auto">
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('text_menu_burger_edit', {'id': text_menu_burger.id} ) }}" class="button is-small is-dark is-absolute is-left-075rem" style="top: 50px;">Modifier le contenu</a>
            {% endif %}
            <div class="column px-6 is-flex is-flex-direction-column is-align-items-center is-justify-content-center">
                {{ text_menu_burger.text|raw }}
            </div>
            <div class="column is-two-thirds-desktop px-6 is-flex is-align-items-center is-justify-content-center">
                <div class="columns is-flex-desktop has-text-info is-align-items-center">
                    {% set i = 0 %}
                    {% for galerie in galeries %}
                        {% if i < galeries|length-1 and (i is divisible by(2)) %}
                        <div class="column is-flex-touch has-text-centered">
                            <a class="column has-transition-5-ms has-text-weight-bold is-size-4-desktop has-text-centered has-text-info" href="{{ path('gallery_year', {'id_gallery': galeries[i].id}) }}">
                                {{ galeries[i].year }}
                            </a>
                            <span class="has-text-weight-bold is-size-4-desktop has-text-centered has-text-info is-hidden-touch">/</span>
                            <a class="column has-transition-5-ms has-text-weight-bold is-size-4-desktop has-text-centered has-text-info" href="{{ path('gallery_year', {'id_gallery': galeries[i+1].id}) }}">
                                {{ galeries[i+1].year }}
                            </a>
                        </div>
                        {% endif %}
{#                        {% if galerie.year %}#}
{#                            <a class="column has-transition-5-ms has-text-weight-bold is-size-4-desktop has-text-centered has-text-info" href="{{ path('gallery_year', {'id_gallery': galerie.id}) }}">#}
{#                                {{ galerie.year }}#}
{#                            </a>#}
{#                        {% endif %}#}
                        {% set i = i+1 %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

</div>

    <a id="burger" onclick="burgerAnimation(this); slideFromRight('menu-slide')">

        <span class="bar1 has-transition-5-ms"></span>
        <span class="bar2 has-transition-5-ms"></span>
        <span class="bar3 has-transition-5-ms"></span>
        <div class="bars-centrales">
            <span class="bar4 has-transition-5-ms"></span>
        </div>

    </a>