{% extends 'base.html.twig' %}

{% block title %}Oeuvre{% endblock %}

{% block body %}

<div class="container is-flex is-flex-direction-column is-justify-content-center is-align-items-center py-6">

    <div class="column is-full is-flex is-justify-content-start">
        <a class="button is-small is-dark" href="{{ path('oeuvre_index') }}">Retour Ã  la liste des oeuvres</a>
    </div>

    <img class="" src="{{ asset('images/oeuvres/' ~ oeuvre.fileName) | imagine_filter('small') }}" alt="{{ oeuvre.fileName }}">

    <h1>Oeuvre : {{ oeuvre.titre }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ oeuvre.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ oeuvre.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ oeuvre.description|raw }}</td>
            </tr>
            <tr>
                <th>Fichier</th>
                <td>{{ oeuvre.fileName }}</td>
            </tr>
            <tr>
                <th>Annee</th>
                <td>{{ oeuvre.yearDirectory }}</td>
            </tr>
        </tbody>
    </table>

    <div class="column is-full is-flex is-justify-content-space-evenly">
        <a class="button is-small is-dark is-outlined mr-5" href="{{ path('oeuvre_edit', {'id': oeuvre.id}) }}">Modifier</a>

        {{ include('oeuvre/_delete_form.html.twig') }}
    </div>

</div>
{% endblock %}
