{% extends 'base.html.twig' %}

{% block title %}Modifier la galerie{% endblock %}

{% block body %}
<div class="container is-flex is-flex-direction-column is-justify-content-center is-align-items-center py-6">
    <div class="column is-full is-flex is-justify-content-start">
        <a class="button is-small is-dark" href="{{ path('year_directory_index') }}">Retour Ã  la liste des galeries</a>
    </div>

    <h1 class="title">Modifier la galerie</h1>

    {{ include('year_directory/_form.html.twig', {'button_label': 'Update'}) }}

    {{ include('year_directory/_delete_form.html.twig') }}
</div>

    <div class="columns is-multiline px-6 is-flex is-justify-content-center">
        {% for oeuvre in oeuvres %}
            {% if oeuvre.fileName %}
                <a href="{{ path('year_directory_add_oeuvre', {'id_gallery': year_directory.id, 'id_oeuvre': oeuvre.id }) }}" class="column is-one-fifth is-full-mobile has-text-centered {% if oeuvre.yearDirectory == year_directory %} opacity-1{% else %} opacity-05{% endif %}">
                    <img src="{{ asset('images/oeuvres/' ~ oeuvre.fileName) | imagine_filter('small') }}" alt="">
                    <div class="tag">
                        {{ oeuvre.titre }}
                    </div>
                </a>
            {% endif %}
        {% endfor %}
    </div>

{% endblock %}
