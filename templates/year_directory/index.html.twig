{% extends 'base.html.twig' %}

{% block title %}Gestion des galeries{% endblock %}

{% block body %}
<div class="container pt-6 mt-6">

    <h1 class="title">Gestion des galeries</h1>

    <a href="{{ path('year_directory_new') }}">Ajouter une galerie</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Année</th>
                <th>Fichier</th>
                <th>Gestion</th>
            </tr>
        </thead>
        <tbody>
        {% for year_directory in year_directories %}
            <tr>
                <td>{{ year_directory.id }}</td>
                <td>{{ year_directory.title }}</td>
                <td>{{ year_directory.year }}</td>
                <td>{{ year_directory.fileName }}</td>
                <td>
                    <a href="{{ path('year_directory_show', {'id': year_directory.id}) }}">Voir</a>
                    <a href="{{ path('year_directory_edit', {'id': year_directory.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucune galeries trouvées</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
