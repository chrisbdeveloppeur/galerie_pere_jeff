{% extends 'base.html.twig' %}

{% block title %}Galerie{% endblock %}

{% block body %}
<div class="container is-flex is-flex-direction-column is-justify-content-center is-align-items-center pt-6 mt-6">
    <h1>Galerie {{ year_directory.title }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ year_directory.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ year_directory.title }}</td>
            </tr>
            <tr>
                <th>Année</th>
                <td>{{ year_directory.year }}</td>
            </tr>
            <tr>
                <th>Fichier</th>
                <td>{{ year_directory.fileName }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('year_directory_index') }}">Retour à la liste</a>

    <a href="{{ path('year_directory_edit', {'id': year_directory.id}) }}">Modifier</a>

    {{ include('year_directory/_delete_form.html.twig') }}
</div>
{% endblock %}
